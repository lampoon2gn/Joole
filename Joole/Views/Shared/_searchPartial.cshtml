<style>

    html {
        background-image: linear-gradient(#2474a7,#f9fafc);
        height: 100%;
    }

    .logoImage {
        height: 10%;
        width: 20%;
        display: block;
        margin-left:auto;
        margin-right:auto;
        margin-top:10%;

    }

    .desc {
        font-size: 1.5vw;
        margin-top: 1.7%;
        font-weight: 500;
        text-align: center;
    }
    .btn.btn-secondary.dropdown-toggle {
        background-color:#2273a0;
        height:100%;
        color:black;
        font-weight:500;
        @*font-size: 20%;*@
        text-align: center;
    }
    .dropdown-item {
        font-weight: 500;
        font-size: 9pt;
    }
    .form-control.form-control-lg {
        float: left;
        width: 20%;
        margin-top: 2%;
        height: 3%;
        font-size: 8pt;
        font-weight: 700;
    }
    .search {

    }
    .dropdown {
        margin-top: 2%;
        float: left;
        margin-left: 35%;
        margin-right:1px;
        height: calc(2.3125rem + 2px);
    }
    .searchBtn {
        margin-top: 2%;
        margin-left: 2px;
        height: calc(2.3125rem + 2px);
        width: calc(2.3125rem + 2px);
        background-color: #2471a7;
        border-radius: 0.25rem;
        border: 1px solid transparent;
        color: white;
    }

</style>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Joole</title>
</head>

<body style="background-color: transparent;">

    <img class="logoImage" src="~/Content/Images/joole_logo.png" alt="Joole Logo">

    <div class="desc">
        Building Product Selection Platform
    </div>

    <form class="search" method="post" action="@Url.Action("doSearch", "Home")">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" onchange="changeSub()" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Category
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" name="category">
                <a class="dropdown-item" id="cateChanged" value="Mechanical" href="#">Mechanical</a>
                <a class="dropdown-item" id="cateChanged" value="Elecrical" href="#">Electrical</a>
                <a class="dropdown-item" id="cateChanged" value="Stationary" href="#">Stationary</a>
                <a class="dropdown-item" id="cateChanged" value="Furniture" href="#">Furniture</a>
            </div>
        </div>
        <select class="form-control form-control-lg" id="dropdownMenuButton2" name="subCategory" required></select>
        <button type="submit" class="searchBtn" @*onclick="location.href='@Url.Action("doSearch", "Home")'"*@><i class='fa fa-search'></i></button>
    </form>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script>



        $(document).ready(function () {
            $('.dropdown').each(function (key, dropdown) {
                var $dropdown = $(dropdown);
                $dropdown.find('.dropdown-menu a').on('click', function () {
                    $dropdown.find('button').text($(this).text()).append(' <span class="caret"></span>');
                });
            });
        });
        $(document).ready(function () {
            $('.dropdown-menu').click(function () {

                var subCategories = {
                    Mechanical: ['Fan', 'Vacuum'],
                    Electrical: ['Toaster', 'TV'],
                    Stationary: ['Table Saw', 'Work Bench'],
                    Furniture: ['Couch', 'Table']
                };

                var catlist = document.getElementsByClassName("btn btn-secondary dropdown-toggle")[0];
                var sublist = document.getElementsByClassName("form - control form - control - lg")[0];
                var selCat = catlist.textContent.replace(/\s/g, '');

                $('#dropdownMenuButton2').empty();

                var sub = subCategories[selCat];
                if (sub) {
                    var i;
                    for (i = 0; i < sub.length; i++) {

                        var x = document.getElementById("dropdownMenuButton2");
                        var option = document.createElement("option");
                        option.text = sub[i];
                        x.add(option);
                    }
                }
            });
        });


    </script>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}